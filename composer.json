{
	"name": "tomzx/php-code-coverage-verifier",
	"description": "PHP Code Coverage Verifier",
	"type": "library",
	"keywords": [
		"php code coverage verifier",
		"phpunit",
		"xunit",
		"testing"
	],
	"homepage": "https://github.com/tomzx/php-code-coverage-verifier",
	"license": "MIT",
	"authors": [
		{
			"name": "Tom Rochette",
			"email": "tom@tomrochette.com",
			"homepage": "http://www.tomrochette.com"
		}
	],
	"support": {
		"issues": "https://github.com/tomzx/php-code-coverage-verifier/issues"
	},
	"require": {
		"php": ">=5.5",
		"symfony/console": "~2.7"
	},
	"require-dev": {
		"phpunit/phpunit": "~4"
	},
	"autoload": {
		"psr-4": {
			"PHPCodeCoverageVerifier\\": "src/PHPCodeCoverageVerifier"
		}
	},
	"scripts": {
		"make_git_diff": "scripts/composer/make_verifier_files.sh || true",
		"verifier": "scripts/composer/php_code_coverage_verifier.sh || true",
		"rm_unit_test_files": "scripts/composer/rm_unit_test_file.sh || true",
		"unit_test": [
			"@composer install",
			"@make_git_diff",
			"@verifier"
		]
	},
	"bin": [
		"bin/php-code-coverage-verifier"
	]
}
